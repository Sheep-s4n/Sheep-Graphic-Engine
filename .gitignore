// Fill the texture atlas data buffer with the glyph bitmaps
int offsetX = 0;
for (unsigned char c = 0; c < 128; c++) {
    if (FT_Load_Char(face, c, FT_LOAD_RENDER)) {
        // Handle error
    }
    for (int i = 0; i < face->glyph->bitmap.rows; i++) {
        for (int j = 0; j < face->glyph->bitmap.width; j++) {
            int x = offsetX + j;
            int y = i;
            textureAtlasData[y * textureWidth + x] = face->glyph->bitmap.buffer[i * face->glyph->bitmap.width + j];
        }
    }
    offsetX += face->glyph->bitmap.width;
}